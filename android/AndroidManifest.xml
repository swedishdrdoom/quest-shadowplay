<?xml version="1.0" encoding="utf-8"?>
<!--
    Quest Shadowplay - Android Manifest
    
    This file describes our app to Android:
    - What permissions we need
    - What features we require
    - How the app should be launched
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.questshadowplay.app"
    android:versionCode="1"
    android:versionName="0.1.0">

    <!-- Target Quest 3's Android version -->
    <uses-sdk
        android:minSdkVersion="29"
        android:targetSdkVersion="32" />

    <!-- ==================== PERMISSIONS ==================== -->
    
    <!-- Storage: We need to save video clips -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    
    <!-- For Android 11+: Manage external storage -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    
    <!-- Vibration: Haptic feedback on save -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- ==================== VR FEATURES ==================== -->
    
    <!-- Quest/VR head tracking required -->
    <uses-feature
        android:name="android.hardware.vr.headtracking"
        android:required="true"
        android:version="1" />

    <!-- OpenGL ES 3.2 for graphics -->
    <uses-feature
        android:glEsVersion="0x00030002"
        android:required="true" />

    <!-- ==================== APPLICATION ==================== -->
    
    <application
        android:label="Quest Shadowplay"
        android:icon="@mipmap/ic_launcher"
        android:hasCode="true"
        android:allowBackup="false"
        android:hardwareAccelerated="true"
        android:requestLegacyExternalStorage="true">

        <!-- Meta Quest specific metadata -->
        <meta-data
            android:name="com.oculus.supportedDevices"
            android:value="quest3|quest2|questpro" />

        <!-- This is a VR app -->
        <meta-data
            android:name="com.oculus.vr.focusaware"
            android:value="true" />

        <!-- Hand tracking support (optional) -->
        <meta-data
            android:name="com.oculus.handtracking.frequency"
            android:value="HIGH" />

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:label="Quest Shadowplay"
            android:configChanges="density|keyboard|keyboardHidden|navigation|orientation|screenLayout|screenSize|uiMode"
            android:excludeFromRecents="false"
            android:launchMode="singleTask"
            android:resizeableActivity="false"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            android:exported="true">

            <!-- Launch intent -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <!-- VR category for Quest launcher -->
                <category android:name="com.oculus.intent.category.VR" />
            </intent-filter>
        </activity>

        <!-- Background Service for continuous capture -->
        <service
            android:name=".CaptureService"
            android:label="Shadowplay Capture"
            android:exported="false"
            android:foregroundServiceType="mediaProjection">
        </service>

    </application>

</manifest>

